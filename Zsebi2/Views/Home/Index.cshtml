@model MainViewModel

@{
    ViewData["Title"] = "Home Page";
}

@Html.Partial("_MainMenu")
@Html.Partial("_SatelliteMenu")

<div id="news_container">
    @await Component.InvokeAsync("News")
</div>

@Html.Partial("_Team", Model.Team)
@Html.Partial("_Sponsors")
@Html.Partial("_Amateur")
@Html.Partial("_ContactMenu")

@section Scripts {

    <script type="text/javascript">
        function attachAjaxCalls() {
            $('#news_container').on('click', '#news-next-container a', function (e) {
                e.preventDefault();
                $('#news_container')
                    .load($(this).attr('href'));
            });

            $('#news_container').on('click', '#news-prev-container a', function (e) {
                e.preventDefault();
                $('#news_container')
                    .load($(this).attr('href'));
            });
        }

        $(function () { attachAjaxCalls(); });

    </script>

}
