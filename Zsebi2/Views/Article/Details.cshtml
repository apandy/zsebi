@using Zsebi2.DataLayer
@model Zsebi2.DataLayer.Article

@{
    //Layout = null;
}
<section class="container full-page-content">
    <div class="zsebi-panel-wrapper">
        <article class="panel panel-zsebi">
            <header class="clearfix panel-heading">
                <h3 class="pull-left panel-title">
                    @Model.Title
                </h3>
                <a class="pull-right back" href="@Url.Action("Index", "Home")#news">VISSZA</a>
            </header>
            <div class="panel-body">
                <div class="socialsLine">
                    <a href="https://www.facebook.com/smog1official/"><img src="~/images/icon_facebook.png"></a>
                    <a href="https://twitter.com/Smog1_pq"><img src="~/images/icon_twitter.png"></a>
                </div>
                <p>
                    @Html.Raw(Model.HtmlBody)
                </p>
            </div>
        </article>
    </div>
</section>
